{% extends 'layout.html.twig' %}

{% block content %}
	<div class="index container d-flex flex-column justify-content-center align-items-center">
		<h1 class="text-center text-light mb-5 fs-1">Participe au blind test<br>
			et tente de battre le record</h1>
		<div class="row">
			<div class="col-12 d-flex flex-column align-items-center">
				{% if user %}
					<p class="text-user-index">
						Bienvenue
						{{ user }}
					</p>
				{% endif %}
				<form action="/" method="post">
					<div>

						{% if user %}
							{% else %}
								<label for="lname"></label>
								<input class="placehorder w-100" type="text" id="lname" name="user_id" placeholder="Ton pseudo*">
						{% endif %}
					</div>

					<div class="mt-1">
						{% if user %}
							<a href="/category" class="btn mb-2 mb-md-0 btn-tertiary btn-block">LANCER !</a>
						{% else %}
							<button type="submit" class="btn ms-0 mb-2 mb-md-0 btn-tertiary btn-block w-100">M'ENREGISTRER</button>
						{% endif %}
						{% if errors %}
							<p class='has-error	'>Pseudo déjà utilisé</p>
						{% endif %}
					</div>
				</form>
			</div>
		</div>
	</div>


{% endblock %}
