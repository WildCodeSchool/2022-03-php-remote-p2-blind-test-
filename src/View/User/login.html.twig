{% extends "layout.html.twig" %}

{% block content %}
    <div class="modal-dialog" role="document">
        <form method="post" class="modal-content clearfix">
            <div class="modal-body">
                <h3 class="title">Connecte-toi</h3>
                {% if errors %}
					<p class="error-register">Ces accès ne fonctionnent pas</p>
					<ul>
						{% for error in errors %}
							<li>{{error}}</li>
						{% endfor %}
					</ul>
				{% endif %}
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Ton adresse email*">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Ton mot de passe*">
                </div>
                <div class="forgot-pass d-flex justify-content-between">
                    <a href="/register">S'inscrire</a>
                    <a href="">Mot de passe oublié?</a>
                </div>
                <button type="submit" class="btn">Connexion</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
