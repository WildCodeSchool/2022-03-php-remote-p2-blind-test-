{% extends "layout.html.twig" %}

{% block content %}
<div class="show-modal z-index-3 position-absolute top-50 start-50 translate-middle" id="myModal" tabindex="-1"
    role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content clearfix">
            <form class="modal-body">
                <h3 class="title">Inscris-toi</h3>
                <div class="form-group">
                    <div class="form-group">
                        <span class="input-icon"><i class="fa fa-user"></i></span>
                        <input type="email" class="form-control" placeholder="Ton nom de famille*">
                    </div>
                    <span class="input-icon"><i class="fa fa-user"></i></span>
                    <input type="email" class="form-control" placeholder="Ton prénom*">
                </div>
                <div class="form-group">
                    <span class="input-icon"><i class="fa fa-user"></i></span>
                    <input type="email" class="form-control" placeholder="Ton adresse email*">
                </div>
                <div class="form-group">
                    <span class="input-icon"><i class="fas fa-key"></i></span>
                    <input type="password" class="form-control" placeholder="Ton mot de passe*">
                </div>
                <div class="forgot-pass d-flex justify-content-between">
                    <a href="/login">Me connecter</a>
                    <a href="">Mot de passe oublié?</a>
                </div>
                <a href="/dashboard" class="btn">Connexion</a>
